<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddActivity">
    <LinearLayout
            android:layout_width="350dp" android:layout_height="400dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:orientation="vertical"
            android:id="@+id/linearLayout2">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="numberDecimal"
                android:ems="10"
                style="@style/TextView.textStyle"

                android:id="@+id/line_number_field"
                android:background="@drawable/border_edit_text"
                android:layout_weight="1" android:hint="Номер рейса" android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                style="@style/TextView.textStyle"

                android:id="@+id/crew_field"
                android:background="@drawable/border_edit_text"
                android:layout_weight="1" android:hint="Экипаж" android:textAlignment="center"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:ems="10"
                style="@style/TextView.textStyle"

                android:id="@+id/plane_type_spinner"
                android:background="@drawable/border_edit_text"
                android:layout_weight="1" android:hint="Выберите тип самолета" android:textAlignment="center"/>


        <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                style="@style/TextView.textStyle"

                android:id="@+id/avialable_seats_field"
                android:background="@drawable/border_edit_text"
                android:layout_weight="1" android:hint="Доступные  места для 4,3,2,1 класса" android:textAlignment="center"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                style="@style/TextView.textStyle"

                android:id="@+id/seat_price_field"
                android:background="@drawable/border_edit_text"
                android:layout_weight="1" android:hint="Цены для мест 4,3,2,1 класса" android:textAlignment="center"/>




    </LinearLayout>

    <LinearLayout
            android:layout_width="350dp" android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="date|datetime"
                android:ems="10"
                style="@style/TextView.textStyle"

                android:id="@+id/date_field"
                android:background="@drawable/border_edit_text"
                android:layout_weight="1" android:hint="Выберите дату отправки" android:textAlignment="center"/>
        <com.google.android.material.button.MaterialButton
                android:text="Выбрать дату"
                style="@style/TextAppearance.AppCompat.Button.textStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/pick_date_btn"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/purple_gradient"
                app:backgroundTintMode="multiply"
                app:layout_constraintVertical_bias="0.9"
                android:layout_weight="2"
                android:backgroundTintMode="src_over" android:hapticFeedbackEnabled="true" app:backgroundTint="#9401FB"
                android:drawableTintMode="multiply" android:textStyle="italic" android:textAllCaps="false"
                android:textSize="16sp" app:layout_constraintHorizontal_bias="0.8"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
            android:text="Добавить рейс"
            style="@style/TextAppearance.AppCompat.Button.textStyle"
            android:layout_width="120dp"
            android:layout_height="70dp" android:id="@+id/add_line_btn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/purple_gradient"
            app:backgroundTintMode="multiply"
            app:layout_constraintVertical_bias="0.9"

            android:backgroundTintMode="src_over" android:hapticFeedbackEnabled="true" app:backgroundTint="#9401FB"
            android:drawableTintMode="multiply" android:textStyle="italic" android:textAllCaps="false"
            android:textSize="16sp" app:layout_constraintHorizontal_bias="0.8"/>
    <com.google.android.material.button.MaterialButton
            android:text="Вернутся к списку"
            style="@style/TextAppearance.AppCompat.Button.textStyle"
            android:layout_width="120dp"
            android:layout_height="70dp" android:id="@+id/back_to_list_btn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/purple_gradient"
            app:backgroundTintMode="multiply"
            app:layout_constraintVertical_bias="0.9"

            android:backgroundTintMode="src_over" android:hapticFeedbackEnabled="true" app:backgroundTint="#9401FB"
            android:drawableTintMode="multiply" android:textStyle="italic" android:textAllCaps="false"
            android:textSize="16sp" app:layout_constraintHorizontal_bias="0.2"/>

</androidx.constraintlayout.widget.ConstraintLayout>