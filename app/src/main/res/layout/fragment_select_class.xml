<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".SelectClassFragment" android:id="@+id/frameLayout">


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="280dp"
            android:layout_height="500dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/list_classes"
            app:layoutManager="LinearLayoutManager"
            tools:context=".SelectClassFragment"
            tools:listitem="@layout/check_boxes_item"
            app:layout_constraintVertical_bias="0.1"
    />
    <com.google.android.material.button.MaterialButton
            android:text="Подтвердить"
            style="@style/TextAppearance.AppCompat.Button.textStyle"
            android:layout_width="170dp"
            android:layout_height="70dp" android:id="@+id/close_btn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/purple_gradient"
            app:backgroundTintMode="multiply"
            app:layout_constraintVertical_bias="0.5"

            android:backgroundTintMode="src_over" android:hapticFeedbackEnabled="true" app:backgroundTint="#9401FB"
            android:drawableTintMode="multiply" android:textStyle="italic" android:textAllCaps="false"
            android:textSize="20sp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/list_classes"/>


</androidx.constraintlayout.widget.ConstraintLayout>